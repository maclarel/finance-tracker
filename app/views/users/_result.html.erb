<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @stock %>
  <div class="card card-header results-block">
    <strong>Symbol: </strong> <%= @stock.ticker %>
    <strong>Name: </strong> <%= @stock.name %>
    <strong>Price: </strong> <%= @stock.last_price %>
    <% if current_user.can_track_stock?(@stock.ticker) %>
      <%= link_to "Add to portfolio", user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-success", method: :post %>
    <% else %>
      <% if current_user.stock_already_tracked?(@stock.ticker) %>
        <span class="badge badge-secondary">
          You are already tracking <%= @stock.name %>
        </span>
      <% elsif !current_user.under_stock_limit? %>
        <span class="badge badge-secondary">
          You are already tracking 10 stocks
        </span>
      <% end %>
    <% end %>
  </div>
<% end %>
