<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">email</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @user_friends.sort.each do |friend| %>
          <tr>
            <th scope="row"><%= friend.full_name %></th>
            <th scope="row"><%= friend.email %></th>
            <td><%= link_to "View profile", user_path(friend), class: "btn btn-success" %>
            <%= link_to "Stop following", friendship_path(friend), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
